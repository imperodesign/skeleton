# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,styl,jade}]
charset = utf-8
indent_style = space
intent_size = 2

[*.{js,styl}]
trim_trailing_whitespace = true

[*.jade]
trim_trailing_whitespace = false
