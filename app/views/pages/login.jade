extend ../layout

append body-start
  h1 Login
  form(name = "login", action = "/users/login", method = "post")
    | Email
    input(type="text", name="email", id="email")
    br
    | Password
    input(type="text", name="password", id="password")
    br
    input(type="hidden", name="_csrf", value="#{csrfToken}")
    input(type="submit", value="Login")
